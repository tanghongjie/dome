<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_height"
    android:background="@color/main_color">

    <!-- 标题栏 -->
    <ImageButton
        style="@style/back_icon_style"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@id/tv_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_title_height"
        android:layout_marginRight="@dimen/common_title_height"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/titlebar_title_text_color"
        android:textSize="@dimen/title_textsize"/>

    <TextView
        android:id="@id/title_right_view_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_title_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_maincolor_8dp"
        android:gravity="center"
        android:minWidth="@dimen/common_title_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/text_ok"
        android:textColor="@color/titlebar_right_text_color"
        android:textSize="@dimen/right_btn_textsize"/>

</RelativeLayout>
